@using TechXpress_PL.ViewModels
@{
    Layout = "Layout2";
}
@model LoginVm
@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login - TechXpress</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <div class="auth-wrapper">
        <form class="auth-form" asp-action="Login"> 
            <h2>Login to Your Account</h2>
            <div class="form-group">
                <label asp-for="Email" >Email address</label>
                <input asp-for="Email" type="email" class="form-control" name="email" required>
            </div>
            <div class="form-group">
                <label asp-for="Password" >Password</label>
                <input asp-for="Password" type="password" class="form-control" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
            <div class="link mt-2">
                Don't have an account? <a asp-controller="Account" asp-action="SignUp">Sign Up</a>
            </div>
        </form>
    </div>

</body>
</html>
