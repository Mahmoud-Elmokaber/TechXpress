@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<form asp-action="PlaceOrder" method="post" id="checkout-form">
    <div class="section">
        <div class="container">
            <div class="row">

                <!-- Billing -->
                <div class="col-md-7">
                    <div class="billing-details">
                        <div class="section-title">
                            <h3 class="title">Billing address</h3>
                        </div>

                        <div class="form-group">
                            <input asp-for="FullName" class="input" placeholder="First Name" />
                        </div>
                        @* <div class="form-group">
                            <input asp-for="LastName" class="input" placeholder="Last Name" />
                        </div> *@
                        <div class="form-group">
                            <input asp-for="Email" class="input" placeholder="Email" />
                        </div>
                        <div class="form-group">
                            <input asp-for="Address" class="input" placeholder="Address" />
                        </div>
                        <div class="form-group">
                            <input asp-for="City" class="input" placeholder="City" />
                        </div>
                        <div class="form-group">
                            <input asp-for="Country" class="input" placeholder="Country" />
                        </div>
                        <div class="form-group">
                            <input asp-for="ZipCode" class="input" placeholder="ZIP Code" />
                        </div>
                        <div class="form-group">
                            <input asp-for="PhoneNumber" class="input" placeholder="Telephone" />
                        </div>
                    </div>
                </div>

                <!-- Order -->
                <div class="col-md-5 order-details">
                    <div class="section-title text-center">
                        <h3 class="title">Your Order</h3>
                    </div>

                    <div class="order-summary">
                        <div class="order-col">
                            <div><strong>PRODUCT</strong></div>
                            <div><strong>TOTAL</strong></div>
                        </div>

                        <div class="order-products">
                            @foreach (var item in Model.CartItems)
                            {
                                <div class="order-col">
                                    <div>@item.Quantity x @item.ProductName</div>
                                    <div>$@item.Price</div>
                                </div>
                            }
                        </div>

                        <div class="order-col">
                            <div>Shipping</div>
                            <div><strong>FREE</strong></div>
                        </div>

                        <div class="order-col">
                            <div><strong>TOTAL</strong></div>
                            <div><strong class="order-total">$@Model.TotalAmount</strong></div>
                        </div>
                    </div>

                    <div class="payment-method">
                        <div class="input-radio">
                            <input type="radio" name="PaymentMethod" id="payment-cash" value="CashOnDelivery" checked>
                            <label for="payment-cash">
                                <span></span>
                                Cash on Delivery
                            </label>
                            <div class="caption">
                                <p>You will pay when the order is delivered to your address.</p>
                            </div>
                        </div>

                        <div class="input-radio">
                            <input type="radio" name="PaymentMethod" id="payment-stripe" value="Stripe">
                            <label for="payment-stripe">
                                <span></span>
                                Pay with Stripe
                            </label>
                            <div class="caption">
                                <p>Secure card payment using Stripe.</p>
                            </div>
                        </div>
                    </div>


                    <div class="input-checkbox">
                        <input type="checkbox" id="terms" required />
                        <label for="terms"><span></span> I've read and accept the <a href="#">terms & conditions</a></label>
                    </div>

                    <button type="submit" class="primary-btn order-submit">Place order</button>
                </div>

            </div>
        </div>
    </div>
</form>
