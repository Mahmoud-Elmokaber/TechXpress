@model IEnumerable<Cart>

<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-md-12">
				<!-- Cart -->
				<div class="cart-page">
					<div class="cart-table">
						<table class="table">
							@if (!Model.Any())
							{

								<div class="col-12 text-center py-5" id="empty-cart">
									<h3>Your cart is empty</h3>
									<p>Browse our products and add items to your cart</p>
									<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Browse Products</a>
								</div>
							}
							else
							{
							<thead>
								<tr>
									<th>Product</th>
									<th>Price</th>
									<th>Quantity</th>
									<th>Total</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								
								@foreach(var item in Model){
								<tr>
									<td class="cart-product">
										<div class="product-img">
											<img src="./img/product01.png" alt="">
										</div>
										<div class="product-body">
											<h3 class="product-name">@item.ProductName</h3>
											<h4 class="product-category">Laptops</h4>
										</div>
									</td>
									<td class="cart-price">@item.Price.ToString("C")</td>
									<td class="cart-quantity">
										<div class="qty-input">
											<button class="qty-down">-</button>
											<input type="number" name="@item.Quantity" value="1" min="1">
											<button class="qty-up">+</button>
										</div>
									</td>
									<td class="cart-total">@(item.Price * (item.Quantity))</td>
									<td class="cart-delete">
											<button asp-action="RemoveFromCart">
											
											   <i class="fa fa-close"></i>
									       </button>
									</td>
								</tr>
								}
								
							</tbody>
							}
						</table>
					</div>

					<div class="row">
						<div class="col-md-7">
							<div class="cart-actions">
								<div class="cart-coupon">
									<input type="text" placeholder="Coupon Code">
									<button class="primary-btn">Apply Coupon</button>
								</div>
								<button class="primary-btn">Update Cart</button>
							</div>
						</div>
						<div class="col-md-5">
							<div class="cart-summary">
								<h3>Cart Totals</h3>
								<div class="summary-item">
									<span>Subtotal</span>
									<span>$2,940.00</span>
								</div>
								<div class="summary-item">
									<span>Shipping</span>
									<span>Free</span>
								</div>
								<div class="summary-item">
									<span>Tax</span>
									<span>$294.00</span>
								</div>
								<div class="summary-item total">
									<span>Total</span>
									<span>$3,234.00</span>
								</div>
								<div class="checkout-btn">
									<a asp-controller="Checkout" asp-action="Index">
									<button class="primary-btn">Proceed to Checkout</button>
									</a>
								</div>
								<div class="continue-shopping">
									<a asp-controller="Home" asp-action="Index">Continue Shopping</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- /Cart -->
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /SECTION -->