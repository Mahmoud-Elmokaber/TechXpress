<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-md-12">
				<!-- Cart -->
				<div class="cart-page">
					<div class="cart-table">
						<table class="table">
							<thead>
								<tr>
									<th>Product</th>
									<th>Price</th>
									<th>Quantity</th>
									<th>Total</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td class="cart-product">
										<div class="product-img">
											<img src="./img/product01.png" alt="">
										</div>
										<div class="product-body">
											<h3 class="product-name">Laptop Ultra HD 4K</h3>
											<h4 class="product-category">Laptops</h4>
										</div>
									</td>
									<td class="cart-price">$980.00</td>
									<td class="cart-quantity">
										<div class="qty-input">
											<button class="qty-down">-</button>
											<input type="number" value="1" min="1">
											<button class="qty-up">+</button>
										</div>
									</td>
									<td class="cart-total">$980.00</td>
									<td class="cart-delete">
										<button><i class="fa fa-close"></i></button>
									</td>
								</tr>
								<tr>
									<td class="cart-product">
										<div class="product-img">
											<img src="./img/product02.png" alt="">
										</div>
										<div class="product-body">
											<h3 class="product-name">Wireless Headphones</h3>
											<h4 class="product-category">Accessories</h4>
										</div>
									</td>
									<td class="cart-price">$290.00</td>
									<td class="cart-quantity">
										<div class="qty-input">
											<button class="qty-down">-</button>
											<input type="number" value="2" min="1">
											<button class="qty-up">+</button>
										</div>
									</td>
									<td class="cart-total">$580.00</td>
									<td class="cart-delete">
										<button><i class="fa fa-close"></i></button>
									</td>
								</tr>
								<tr>
									<td class="cart-product">
										<div class="product-img">
											<img src="./img/product03.png" alt="">
										</div>
										<div class="product-body">
											<h3 class="product-name">Smartphone Pro Max</h3>
											<h4 class="product-category">Smartphones</h4>
										</div>
									</td>
									<td class="cart-price">$460.00</td>
									<td class="cart-quantity">
										<div class="qty-input">
											<button class="qty-down">-</button>
											<input type="number" value="3" min="1">
											<button class="qty-up">+</button>
										</div>
									</td>
									<td class="cart-total">$1,380.00</td>
									<td class="cart-delete">
										<button><i class="fa fa-close"></i></button>
									</td>
								</tr>
							</tbody>
						</table>
					</div>

					<div class="row">
						<div class="col-md-7">
							<div class="cart-actions">
								<div class="cart-coupon">
									<input type="text" placeholder="Coupon Code">
									<button class="primary-btn">Apply Coupon</button>
								</div>
								<button class="primary-btn">Update Cart</button>
							</div>
						</div>
						<div class="col-md-5">
							<div class="cart-summary">
								<h3>Cart Totals</h3>
								<div class="summary-item">
									<span>Subtotal</span>
									<span>$2,940.00</span>
								</div>
								<div class="summary-item">
									<span>Shipping</span>
									<span>Free</span>
								</div>
								<div class="summary-item">
									<span>Tax</span>
									<span>$294.00</span>
								</div>
								<div class="summary-item total">
									<span>Total</span>
									<span>$3,234.00</span>
								</div>
								<div class="checkout-btn">
									<a asp-controller="Checkout" asp-action="Index">
									<button class="primary-btn">Proceed to Checkout</button>
									</a>
								</div>
								<div class="continue-shopping">
									<a asp-controller="Home" asp-action="Index">Continue Shopping</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- /Cart -->
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
